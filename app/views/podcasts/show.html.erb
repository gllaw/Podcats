<nav class="indigo darken-2">
	<a class="btn btn deep-purple darken-3 z-depth-3" href="/podcasts/index">Back</a>
	<a href="#" class="brand-logo center"> <img id="editorslogo" src="/assets/whitefull" alt="cat logo"></a>
</nav>
<div id="blackwrapperplay" class="black">
	<div id="dashboardwrapperplay" class="catlogo teal lighten-1">
		<div>
		<!--  -->
			<img id="backgroundlogo" src="/assets/blackfull" alt="cat logo">
		</div>
		
	<div class="z-depth-3" id="playerbox">
		<div class="center-align">
			<% if @podcast_all.type_id == 1 %>
				<h1>This Week's Popular Choice</h1>
			  <h5>This week's trending podcast on itunes is: <%= @podcast_all.show %>!</h5>
			<% elsif @podcast_all.type_id == 2 %>
				<h1>This Week's Editors Choice</h1>
			  <h5>The editor's pick of the week is: <%=@podcast_all.show %>!</h5>
			<% else %>
				<h1>This Week's Users Choice</h1>
			  <h5>This week's random selection from a user's submission is: <%= @podcast_all.show %>!</h5>  
			<% end %>
		</div>

		
		<div id="player" class="z-depth-3">
			<% if @podcast_all.link =~ /this-american-life/ %>

			  <script src="http://audio.thisamericanlife.org/widget/widget.min.js" type="text/javascript"></script>
			  <div id="<%= @podcast_all.link %>" class="this-american-life" style="width:auto;"></div>

			
			<% elsif  @podcast_all.link =~ /radiolab/ %>

			  <iframe frameborder='0' height='180' src="http://www.radiolab.org/widgets/bucket_player/#slotname=radiolab-bucket-player-episodes" mce_src="http://www.radiolab.org/widgets/bucket_player/#slotname=radiolab-bucket-player-episodes" width='300px'></iframe>

			<% else %>

			    <iframe width="100%" height="450" scrolling="no" frameborder="no" src="<%= @podcast_all.link %>"></iframe>

			<% end %>
		</div>

	</div>


		<div id="chatwrap">
			<iframe class="white center-align" id="chat" src="/comments/comments_partial/<%= @podcast_all.id %>" width="500" height="500" scrolling="yes"><p>This only displays if your browser does not support iframes.</p></iframe>
		</div>

	</div>
</div>
